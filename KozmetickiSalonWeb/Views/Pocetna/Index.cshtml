@model KozmetickiClassLibrary.ViewModels.PocetnaVM

@{
    ViewBag.Title = "Index";
}




<hr />
<div class="row">
    <div class="col-md-6">
        <h2>@Model.Datum.ToLongDateString()</h2>
    </div>
    <div class="col-md-6">
        <button class="btn-default btn-lg">
            @Html.ActionLink("Nova narudžba", "Create", "Narudzbas")
        </button>
    </div>
</div>

<hr />
@if (Model.Zaposlenici.Count % 2 == 0)
{
    for (int r = 0; r < Model.Broj; r++)
    {
        <div class="row">
            @for (int j = 0; j < 2; j++)
            {
                <div class="col-md-6">
                    <h4>@Model.Zaposlenici[r * 2 + j].ImePrezime</h4>

                    <table class="table">


                        @foreach (var n in Model.Zaposlenici[r * 2 + j].Narudzbe)
                        {
                            <tr>
                                <td>
                                    <b>@n.Vrijeme.ToShortTimeString()</b>
                                </td>
                                <td>

                                    <b>  @n.Usluga.Naziv</b>
                                </td>
                                <td>
                                    @n.Usluga.Trajanje min
                                </td>
                                <td>
                                    @n.Klijent
                                </td>
                                <td>
                                    @n.Kontakt
                                </td>

                            </tr>
                        }

                    </table>

                </div>
            }
        </div>
    }
}

@if (Model.Zaposlenici.Count % 2 != 0)
{
    for (int r = 0; r < Model.Broj - 1; r++)
    {
        <div class="row">
            @for (int j = 0; j < 2; j++)
            {
                <div class="col-md-6">
                    <h4>@Model.Zaposlenici[r * 2 + j].ImePrezime</h4>
                    <hr />
                    <table class="table">


                        @foreach (var n in Model.Zaposlenici[r * 2 + j].Narudzbe)
                        {
                            <tr>
                                <td>
                                    <b> @n.Vrijeme.ToShortTimeString()</b>
                                </td>
                                <td>

                                    <b>  @n.Usluga.Naziv  </b>
                                </td>
                                <td>
                                    @n.Usluga.Trajanje min
                                </td>
                                <td>
                                    @n.Klijent
                                </td>
                                <td>
                                    @n.Kontakt
                                </td>

                            </tr>
                        }

                    </table>

                </div>
            }
        </div>
    }
    <div class="row">
        <div class="col-md-6">
            <h4>@Model.Zaposlenici[Model.Zaposlenici.Count - 1].ImePrezime</h4>
            <hr />
            <table class="table">


                @foreach (var n in Model.Zaposlenici[Model.Zaposlenici.Count - 1].Narudzbe)
                {
                    <tr>
                        <td>
                            <b>   @n.Vrijeme.ToShortTimeString()</b>
                        </td>
                        <td>

                            <b> @n.Usluga.Naziv</b>
                        </td>
                        <td>
                            @n.Usluga.Trajanje min
                        </td>
                        <td>
                            @n.Klijent
                        </td>
                        <td>
                            @n.Kontakt
                        </td>

                    </tr>
                }

            </table>

        </div>
        
    </div>
}





