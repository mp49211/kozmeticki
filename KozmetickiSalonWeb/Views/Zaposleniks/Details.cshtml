@model KozmetickiClassLibrary.ViewModels.ZaposlenikVM

@{
    ViewBag.Title = "Detalji";
}

<h2>@Html.DisplayFor(model => model.ImePrezime)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            OIB
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Oib)
        </dd>

        <dt>
            Adresa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adresa.Naziv)
        </dd>
        <dt>
            Grad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adresa.Grad.Naziv)
        </dd>
        <dt>
            Poštanski broj
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adresa.Grad.Pbr)
        </dd>

        <dt>
            Smjena
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Smjena.Naziv)
            @Html.Raw(" (")
            @Html.DisplayFor(model => model.Smjena.TimeStart)
            @Html.Raw(" - ")
            @Html.DisplayFor(model => model.Smjena.TimeEnd)
            @Html.Raw(")")
        </dd>

    </dl>
    <hr />
    @Html.ActionLink("Pregledaj zaradu", "Profit", new { id = Model.IdZaposlenik })
    <hr />
    <h4>Usluge</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                Naziv
            </th>

            <th>
                Kategorija
            </th>

        </tr>

        @foreach (var item in Model.Usluge)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Kategorija.Naziv)
                </td>

            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Uredi", "Edit", new { id = Model.IdZaposlenik }) |
    @Html.ActionLink("Natrag na popis", "Index")
</p>
